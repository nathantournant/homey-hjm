{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "paths": {
      "homey": ["./node_modules/homey-apps-sdk-v3-types"]
    },
    "baseUrl": "."
  },
  "include": [
    "app.ts",
    "lib/**/*.ts",
    "drivers/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    ".homeybuild"
  ]
}
